{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Functions Emulator (Debug)",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "serve"
      ],
      "isBackground": true,
      "options": {
        "cwd": "${workspaceFolder}/functions",
        "env": {
          "FIREBASE_FUNCTIONS_EMULATOR_DEBUG_PORT": "9229"
        }
      },
      "problemMatcher": []
    },
    {
      "label": "Start Functions Shell (Debug)",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "shell"
      ],
      "isBackground": false,
      "options": {
        "cwd": "${workspaceFolder}/functions",
        "env": {
          "FIREBASE_FUNCTIONS_EMULATOR_DEBUG_PORT": "9229"
        }
      },
      "problemMatcher": []
    },
    {
      "label": "npm: start",
      "type": "shell",
      "command": "bash",
      "args": [
        "-lc",
        "set -e; export NVM_DIR=\"${NVM_DIR:-$HOME/.nvm}\"; if [ -s \"$NVM_DIR/nvm.sh\" ]; then . \"$NVM_DIR/nvm.sh\"; fi; if command -v npm >/dev/null 2>&1; then echo Using npm at $(command -v npm); exec npm run start; else echo npm not found after sourcing nvm; exit 127; fi"
      ],
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": ".*"
          },
          "endsPattern": {
            "regexp": "bundle generation complete"
          }
        }
      }
    },
    {
      "label": "npm: test",
      "type": "shell",
      "command": "bash",
      "args": [
        "-lc",
        "set -e; export NVM_DIR=\"${NVM_DIR:-$HOME/.nvm}\"; if [ -s \"$NVM_DIR/nvm.sh\" ]; then . \"$NVM_DIR/nvm.sh\"; fi; if command -v npm >/dev/null 2>&1; then echo Using npm at $(command -v npm); exec npm test; else echo npm not found after sourcing nvm; exit 127; fi"
      ],
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": ".*"
          },
          "endsPattern": {
            "regexp": "bundle generation complete"
          }
        }
      }
    }
  ]
}